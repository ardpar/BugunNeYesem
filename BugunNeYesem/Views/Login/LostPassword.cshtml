@model LostPasswordViewModel
 
@{
    Layout = "/Views/Shared/_LayoutLogin.cshtml";
}


<form class="form-signin" asp-action="LostPassword">
    
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <div asp-validation-summary="ModelOnly">
        <span>Please correct the following errors</span>
    </div>

    <br />
    <input asp-for="Mail" type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>
    <span asp-validation-for="Mail" class="text-danger"></span>
    <br />
    <button class="btn btn-lg btn-primary btn-block" type="submit">Send Mail</button>
    <div class="row"> 
        <a class="mt-2" asp-action="Index">Login</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
 